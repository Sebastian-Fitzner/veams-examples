{{#extend "lyt-default"}}
	{{#content "main"}}

	{{! WrapWith START: Section }}
		{{#wrapWith "u-section" headline="Badges" bash="install vc badge"}}
		{{! WrapWith START: Segment }}
			{{#wrapWith "u-segment" centered=true}}
				{{#with badge-bp}}
					{{#each data}}
						{{> c-badge this}}
					{{/each}}
				{{/with}}
			{{/wrapWith}}
		{{! WrapWith END: Segment }}
		{{/wrapWith}}
		{{! WrapWith END: Section }}

		{{! WrapWith START: Section }}
		{{#wrapWith "u-section" headline="Slider" bash="install vc slider"}}
			{{> demo-slider }}
		{{/wrapWith}}
		{{! WrapWith END: Section }}

		{{! WrapWith START:  }}
		{{#wrapWith "u-section" headline="Tables" bash="install vc table"}}
			{{> demo-table }}
		{{/wrapWith}}
		{{! WrapWith END:  }}

		{{! WrapWith START: Section }}
		{{#wrapWith "u-section" headline="Responsive Youtube video" bash="install vc youtube-video"}}
		{{! WrapWith START: youtube-video }}
			{{#wrapWith "u-segment"}}
				{{#with yt-video-bp}}
					{{> c-yt-video}}
				{{/with}}
			{{/wrapWith}}
		{{! WrapWith END: youtube-video }}
		{{/wrapWith}}
	{{! WrapWith END: Section }}

	{{/content}}
{{/extend}}
